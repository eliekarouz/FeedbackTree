<resources>

    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary2</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:buttonStyle">@style/MyByttonStyle</item>
        <item name="hintTextColor">@color/colorPrimary3</item>
    </style>

    <style name="FTDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/white</item>
    </style>

    <style name="MyActionBarTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:colorBackground">@color/colorPrimary</item>
    </style>

    <style name="MyByttonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PanelDialog">
        <!--        <item name="android:windowAnimationStyle">@style/PanelDialogAnimation</item>-->
        <item name="android:backgroundDimAmount">0</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <!--    <style name="PanelDialogAnimation">-->
    <!--        <item name="android:windowEnterAnimation">@anim/panel_enter</item>-->
    <!--        <item name="android:windowExitAnimation">@anim/panel_exit</item>-->
    <!--    </style>-->
</resources>